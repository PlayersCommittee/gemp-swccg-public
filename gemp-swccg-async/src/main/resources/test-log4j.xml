<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <!-- Pattern to output the caller's file name and line number -->
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS} %5p %c{1}:%L - %m%n"/>
        </layout>
    </appender>
    <appender name="R" class="org.apache.log4j.RollingFileAppender">
        <param name="file" value="/logs/gemp-swccg.log"/>
        <param name="MaxFileSize" value="10MB"/>
        <param name="MaxBackupIndex" value="20"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS} %5p %c{1}:%L - %m%n"/>
        </layout>
    </appender>

    <appender name="chat" class="org.apache.log4j.RollingFileAppender">
        <param name="file" value="$/logs/swccg_chat.log"/>
        <param name="MaxFileSize" value="10MB"/>
        <!-- Keep one backup file -->
        <param name="MaxBackupIndex" value="20"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS} %5p %c{1}:%L - %m%n"/>
        </layout>
    </appender>

    <logger name="com.gempukku" additivity="false">
        <level value="debug"/>
        <appender-ref ref="R"/>
        <appender-ref ref="stdout"/>
    </logger>
    <logger name="chat">
        <level value="ALL"/>
        <appender-ref ref="chat"/>
    </logger>
    <root>
        <level value="error"/>
        <appender-ref ref="R"/>
        <appender-ref ref="stdout"/>
    </root>
</log4j:configuration>